
extends base.pug

block content 
    h4 Change Title of video
    form(method="POST")
        input(name="title" placeholder="Video Title", value=video.title, required)
        input(type="text", required, name="description", placeholder="Description", minlength=80, value=video.description)
        input(type="text", required, name="hashtag", placeholder="write hash tag with #", value=video.hashtag.join())
        input(value="Save", type="submit")
