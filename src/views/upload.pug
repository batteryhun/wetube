
extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video") 
        input(type="text", required, name="title", placeholder="New video name", maxlength=20)
        input(type="text", required, name="description", placeholder="Description", minlength=10)
        input(type="text", required, name="hashtag", placeholder="write hash tag with #")
        input(type="submit", value="Submit")